<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="io.box.catbox.NewCatActivity">

    <ImageView
        android:id="@+id/new_cat_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:clickable="true"
        android:src="@drawable/additem"/>

    <EditText
        android:id="@+id/new_cat_name"
        android:hint="@string/hint_cat_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/new_cat_birthdate"
        android:hint="@string/hint_cat_birthdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/new_cat_race"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button android:id="@+id/new_cat_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_new_cat_save" />

</LinearLayout>
